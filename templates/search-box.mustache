            {{/accomtypes}}
            </select><br />
            
            <select name="rooms" class="styled" id="rooms" style="width: 135px;">
            	<option selected="selected">Number of rooms</option>
            	<option>1 room</option>
            	<option>2 rooms</option>
            	<option>3 rooms</option>
            	<option>4 rooms</option>
            </select>
            
            <p class="subtitleSearch">What type of holiday?</p>
            
            <select name="holiday_type" class="styled" id="holiday_type" style="width: 210px;">
            {{#holidaytypes}}
            	<option {{#selected}}selected="selected"{{/selected}}>{{holidaytype}}</option>
            {{/holidaytypes}}
            </select>
            
            <p class="subtitleSearch">When would you like to go?</p>
            
            <select name="start_day" class="styled" style="width: 58px;">
            {{#startdays}}
            	<option {{#selected}}selected="selected"{{/selected}}>{{day}}</option>
            {{/startdays}}
            </select><select name="start_month" class="styled" style="width: 58px;">
            {{#startmonths}}
            	<option {{#selected}}selected="selected"{{/selected}}>{{month}}</option>
            {{/startmonths}}
            </select><select name="start_year" class="styled" style="width: 58px;">
            {{#startyears}}
            	<option {{#selected}}selected="selected"{{/selected}}>{{year}}</option>
            {{/startyears}}
             </select><br />
            
            <select name="duration" class="styled" id="duration" style="width: 135px;">
            {{#nights}}
            	<option {{#selected}}selected="selected"{{/selected}}>{{duration}}</option>
            {{/nights}}</select>
