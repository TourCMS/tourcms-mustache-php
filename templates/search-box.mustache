          <div id="accommodation_box">
          
          <form action="/accommodation/" method="get" name="accommSearch">
          	<input type="hidden" name="search_type" value="Accommodation" />
           
            <p class="titleSearch">Where would you like to stay?</p>
            
            <select name="location" class="styled" id="location" style="width: 210px;">
            {{#accom_locations}}
