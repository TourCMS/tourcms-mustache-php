           {{/tourtypes}}
           </select>
            <p class="subtitleSearch">Where?</p>
            <select name="location" class="styled" style="width: 210px;">
            {{#tour_locations}}
            	<option {{#selected}}selected="selected"{{/selected}}>{{location}}</option>
            {{/tour_locations}}
            </select>
        <p class="subtitleSearch">When would you like to go?</p>
            <select name="start_day" class="styled" style="width: 58px;">
            
            {{#startdays}}
            	<option {{#selected}}selected="selected"{{/selected}}>{{day}}</option>
            {{/startdays}}
            </select><select name="start_month" class="styled" style="width: 58px;">
            {{#startmonths}}
            	<option {{#selected}}selected="selected"{{/selected}}>{{month}}</option>
