      </div>
                  
        <script type="text/javascript">
        	$("#journey_type").change(function() {
        		var val = $(this).val();
        		if(val == "One-way journey") {
        			$("#returnjourney").fadeOut('slow');
        		} else {
        			$("#returnjourney").fadeIn('slow');
        		}
        	});
        </script>
        
   
